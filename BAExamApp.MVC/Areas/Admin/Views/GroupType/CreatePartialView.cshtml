@model AdminGroupTypeCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="modal fade" id="gtContent" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-l modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-title text-center fw-bolder" style="font-size:30px">@SharedLocalizer["Create", ViewLocalizer["Group_Type"]]</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="form fv-plugins-bootstrap5 fv-plugins-framework" method="post" asp-action="Create">                    
                    <div class="fv-row mb-7 fv-plugins-icon-container">
                        <label asp-for="Name" class="control-label" style="font-size: 20px; font-weight: bold;"></label>
                        <input asp-for="Name" class="form-control bg-white border" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Information" class="control-label" style="font-size: 20px; font-weight: bold;"></label>
                        <textarea maxlength="500" asp-for="Information" class="form-control" style="width:100%; height:150px;"></textarea>
                        <span asp-validation-for="Information" class="text-danger"></span>
                    </div>
                    <div class="separator mb-6"></div>
                    <div class="d-flex justify-content-end">
                        <button class="w3-green w3-button w3-round fw-bold mx-2" type="submit">@SharedLocalizer["Save"]</button>

                        <br />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>