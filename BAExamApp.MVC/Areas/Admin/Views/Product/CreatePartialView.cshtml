@model AdminProductCreateVM

@{
    ViewData["Title"] = ViewLocalizer["Create_New"];
}
<head>
    <link href="~/lib/trainer/css/addexamforstudent.css" rel="stylesheet" />
</head>

<div class="modal fade" id="createProductModal" tabindex="-1" aria-labelledby="ProductAdd" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-title text-center fw-bolder" style="font-size:30px">@ViewLocalizer["Create_New"]</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="form fv-plugins-bootstrap5 fv-plugins-framework" method="post" asp-action="Create">
                    <div class="fv-row fv-plugins-icon-container">
                        <div class="d-flex align-items-center">
                            <label asp-for="Name" class="form-label mt-3" style="font-size: 20px; font-weight: bold;"></label>
                        </div>
                        <input type="text" class="form-control form-control-solid" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="fv-plugins-message-container invalid-feedback"></div>
                    </div>
                    <div class="fv-row fv-plugins-icon-container">
                        <div class="d-flex align-items-center">
                            <label asp-for="TechnicalUnitId" class="form-label mt-3" style="font-size: 20px; font-weight: bold;"></label>
                        </div>
                        <div class="form-group mt-2">
                            <select id="mySelectTechnicalUnits" class="form-control" asp-items="@ViewBag.TechnicalUnits" asp-for="TechnicalUnitId">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="TechnicalUnitId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="fv-row fv-plugins-icon-container">
                        <div class="d-flex align-items-center">
                            <label asp-for="SubjectIds" class="form-label mt-3" style="font-size: 20px; font-weight: bold;"></label>
                        </div>
                        <div class="form-group mt-2">
                            <select id="mySelectSubjects" class="form-control multi-select" style="width: 100%" asp-items="@ViewBag.Subjects" asp-for="SubjectIds" multiple="multiple">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="SubjectIds" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="fv-row fv-plugins-icon-container ">
                        <div class="d-flex align-items-center">
                            <label style="font-size: 20px; font-weight: bold;" asp-for="IsActive" class="form-label mt-3">
                            </label>
                        </div>
                        <div>
                            <label>
                                <input type="radio" asp-for="IsActive" value="true" />
                                @ViewLocalizer["Yes"]
                            </label>
                            <label>
                                <input type="radio" name="IsActive" value="false" />
                                @ViewLocalizer["No"]
                            </label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="separator mb-6"></div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="w3-green w3-button w3-round fw-bold mx-2">@SharedLocalizer["Save"]</button>
                        <span class="indicator-progress">
                            Please wait...
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/select2.js"></script>
<script>
    $('#mySelectSubjects').select2({
        dropdownParent: $('#createProductModal')
    });
</script>