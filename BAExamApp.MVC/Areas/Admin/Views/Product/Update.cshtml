@model AdminProductUpdateVM

@{
    ViewData["Title"] = @ViewLocalizer["Update_Product"];
    if (Model.SubjectIds == null)
    {
        Model.SubjectIds = new();
    }
}
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
</head>

<div class="content container my-5 d-flex flex-column flex-column-fluid card w-50 m-auto" style="border-radius: 30px; background: #e0e0e0; box-shadow: 15px 15px 30px #bebebe, -15px -15px 30px #ffffff;" id="kt_content">
    <div class="card-body h-lg-100" id="kt_contacts_main">
        <div class="card-header pt-7" id="kt_chat_contacts_header">
            <div class="card-title">
                <h3 class="text-center" style="font-size:25px;font-weight:bold">@ViewLocalizer["Update_Product"]</h3>
            </div>
        </div>
        <div class="card-body pt-5">
            <form class="form fv-plugins-bootstrap5 fv-plugins-framework" asp-action="Update">
                <input asp-for="Id" hidden />
                <div class="fv-row mb-7 fv-plugins-icon-container">
                    <div class="d-flex align-items-center">
                        <label asp-for="Name" class="form-label mt-3" style="font-size: 20px; font-weight: bold;"></label>
                    </div>
                    <input type="text" asp-for="Name" class="form-control form-control-solid mb-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="fv-row mb-7 fv-plugins-icon-container">
                    <div class="d-flex align-items-center">
                        <label asp-for="TechnicalUnitId" class="form-label mt-3" style="font-size: 20px; font-weight: bold;"></label>
                    </div>
                    <select class="form-control mb-2" asp-items="Model.TechnicalUnitList" asp-for="TechnicalUnitId"></select>
                    <span asp-validation-for="TechnicalUnitId" class="text-danger"></span>
                </div>
                <div class="fv-row mb-7 fv-plugins-icon-container">
                    <div class="d-flex align-items-center">
                        <label asp-for="SubjectIds" class="form-label mt-3" style="font-size: 20px; font-weight: bold;"></label>
                    </div>
                    <select id="mySelectSubjects" class="form-control mb-2" style="width: 100%" asp-items="@Model.SubjectList" asp-for="SubjectIds" multiple="multiple">
                        <option value="">-- Seçiniz --</option>
                    </select>
                        <span asp-validation-for="SubjectIds" class="text-danger"></span>

                </div>
                <div class="fv-row mb-7">
                    <div class="d-flex align-items-center">
                        <label asp-for="IsActive" class="form-label mt-3" style="font-size: 20px; font-weight: bold;">
                        </label>
                    </div>
                    <div>
                        <label>
                            <input type="radio" name="IsActive" value="true" @(Model.IsActive ? "checked" : "") />
                            @SharedLocalizer["Yes"]
                        </label>
                        <label>
                            <input type="radio" name="IsActive" value="false" @(Model.IsActive ? "" : "checked") />
                            @SharedLocalizer["No"]
                        </label>
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <div class="separator mb-6"></div>
                <div class="d-flex justify-content-end">
                    <a class="w3-button w3-blue w3-round fw-bold mx-2" asp-controller="Product" asp-action="Index">
                        @SharedLocalizer["Back_List"]
                    </a>
                    <button type="submit" style="box-shadow:none" class="w3-button w3-round w3-teal fw-bold mx-2">
                        <span class="indicator-label">@SharedLocalizer["Update"]</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/select2.js"></script>
    <script>
        $('#mySelectSubjects').select2();
    </script>
}
