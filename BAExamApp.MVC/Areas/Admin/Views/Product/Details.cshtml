@model AdminProductDetailVM

@{
    ViewData["Title"] = ViewLocalizer["Product_Details"];
}

<div class="content container my-5 d-flex flex-column flex-column-fluid card w-50 m-auto" id="kt_content" style="border-radius: 30px; background: #e0e0e0; box-shadow: 15px 15px 30px #bebebe, -15px -15px 30px #ffffff;">
    <div class="card-body h-lg-100" id="kt_contacts_main">
        <div class="card-header" id="kt_chat_contacts_header">
            <div class="card-title">
                <h3 class="text-center" style="font-size:25px;font-weight:bold">@ViewLocalizer["Product_Details"]</h3>
            </div>
        </div>
        <div class="card-body pt-5">
            <section class="post_content">
                <div id="item-header" role="complementary">
                    <div id="item-body">
                        <div id="buddydrive-main">
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label mt-0" style="font-size: 18px; font-weight: bold;">
                                    <label asp-for="TechnicalUnitName"></label>
                                    <span style="font-size: 14px;">: @Model.TechnicalUnitName</span>
                                </label>
                                
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label mt-0" style="font-size: 18px; font-weight: bold;">
                                    <label asp-for="ClassRoomCount"></label>
                                    <span style="font-size: 14px;">: @Model.ClassRoomCount </span>
                                </label>
                                
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label mt-0" style="font-size: 18px; font-weight: bold;">
                                    <label asp-for="IsActive"></label>
                                    @if (Model.IsActive is null)
                                    {
                                        <span style="font-size: 14px;">: @SharedLocalizer["IsActiveNull"] </span>
                                    }
                                    else if (Model.IsActive is true)
                                    {
                                        <span style="font-size: 14px;">: @SharedLocalizer["IsActiveTrue"]</span>
                                    }
                                    else
                                    {
                                        <span style="font-size: 14px;">: @SharedLocalizer["IsActiveFalse"]</span>
                                    }
                                </label>
                               
                            </div>
                            <div class="separator mb-6"></div>
                            <div class="tables-grid-container" style="display:grid; grid-template-columns: auto auto; column-gap: 24px;">
                                <div class="sc_table recent_jobs">
                                    <table summary="1" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th colspan="4">@Html.DisplayNameFor(model => model.ProductSubjects)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@Html.DisplayNameFor(model => model.ProductSubjects[0].Name)</td>
                                            </tr>
                                            @foreach (var subject in Model.ProductSubjects)
                                            {
                                                <tr>
                                                    <td class="categories">
                                                        <span class="post_category">@subject.Name</span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="separator mb-6"></div>
                            <div class="tables-grid-container" style="display:grid; grid-template-columns: auto auto; column-gap: 24px;">
                                <div class="sc_table recent_jobs">
                                    <table summary="1" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th colspan="4">@Html.DisplayNameFor(model => model.TrainerProducts)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@Html.DisplayNameFor(model => model.TrainerProducts[0].FullName)</td>
                                                <td>@Html.DisplayNameFor(model => model.TrainerProducts[0].CreatedDate)</td>
                                                <td>@Html.DisplayNameFor(model => model.TrainerProducts[0].UpdatedDate)</td>
                                            </tr>
                                            @foreach (var trainer in Model.TrainerProducts)
                                            {
                                                <tr>
                                                    <td class="categories">
                                                        <span class="post_category">@trainer.FullName</span>
                                                    </td>
                                                    <td class="categories">
                                                        <span class="post_category">@trainer.CreatedDate.ToString("dd/MM/yyyy")</span>
                                                    </td>
                                                    <td class="categories">
                                                        <span class="post_category">@trainer.UpdatedDate.ToString("dd/MM/yyyy")</span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="separator mb-6"></div>
                            <div class="d-flex justify-content-end">
                                <a class="w3-blue w3-button w3-round fw-bold" asp-controller="Product" asp-action="Index">@SharedLocalizer["Back_List"]</a>
                                <a class="w3-teal w3-button w3-round mx-2 fw-bold" asp-action="Update" asp-route-id="@Model.Id">@SharedLocalizer["Edit"]</a>
                                <a class="w3-red w3-button w3-round cursor-pointer deleteAction fw-bold " data-id="@Model.Id"> @SharedLocalizer["Delete"] </a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <section class="related_wrap related_wrap_empty"></section>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/limonte-sweetalert2/sweetalert2.all.js"></script>
    <script>
        $(".deleteAction").click(function () {
            const id = $(this).attr("data-id");
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu işlem geri alınamaz!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "GET",
                        url: "@Url.Action("Delete")" + "?id=" + id,
                        success: function (result) {
                            if (result.isSuccess) {
                                setTimeout(() => location.href = "@Url.Action("index")", 2000)
                            }
                        }
                    });
                }
            })
        });
    </script>

}

