@model AdminExamRuleDetailsVM
@{
    ViewData["Title"] = ViewLocalizer["Exam_Rule_Details"];
}

<div class="content container my-5 d-flex flex-column flex-column-fluid w-75 m-auto" id="kt_content">
    <div class="card h-lg-100 w-100" id="kt_contacts_main" style="border-radius: 30px; background: #e0e0e0; box-shadow: 15px 15px 30px #bebebe, -15px -15px 30px #ffffff;">
        <div class="card-body pt-5">
            <div class="card-title">
                <h3 class="text-center" style="font-size:25px;font-weight:bold"> @ViewLocalizer["Exam_Rule_Details"]</h3>
            </div>
            <section class="post_content">
                <div class="sc_section bg2" style="background: #e0e0e0;">
                    <div class="sc_section_overlay pd40">
                        <div class="sc_section_content">
                            <div class="sc_table recent_jobs">
                                <div id="buddydrive-main">
                                    <div class="fv-row mb-7 fv-plugins-icon-container">
                                        <label class="form-label mt-0" style="font-size: 18px; font-weight: bold;">
                                            <label style="font-size: 18px; font-weight: bold;" asp-for="Name">@ViewLocalizer["Exam_Rule_Name"]</label>
                                            <span style="font-size: 18px; font-weight: bold;">: @Model.Name</span>
                                        </label>

                                    </div>
                                    <div class="fv-row mb-7 fv-plugins-icon-container">
                                        <label class="form-label mt-0" style="font-size: 18px; font-weight: bold;">
                                            <label style="font-size: 18px; font-weight: bold;" asp-for="Description">@ViewLocalizer["Exam_Rule_Description"]</label>
                                            <span style="font-size: 18px; font-weight: bold;">: @Model.Description</span>
                                        </label>

                                    </div>
                                    <div class="fv-row mb-7 fv-plugins-icon-container">
                                        <label class="form-label mt-0" style="font-size: 18px; font-weight: bold;">
                                            <label style="font-size: 18px; font-weight: bold;" asp-for="ProductName">@ViewLocalizer["Product"]</label>
                                            <span style="font-size: 18px; font-weight: bold;">: @Model.ProductName </span>
                                        </label>

                                    </div>
                                </div>
                                <table summary="1" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th colspan="6">@ViewLocalizer["Questions"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@ViewLocalizer["Question_SubjectName"]</td>
                                            <td>@ViewLocalizer["Question_SubtopicName"]</td>
                                            <td>@ViewLocalizer["Exam_Type"]</td>
                                            <td>@ViewLocalizer["Question_Type"]</td>
                                            <td>@ViewLocalizer["Question_Difficulty"]</td>
                                            <td>@ViewLocalizer["Question_Count"]</td>
                                        </tr>
                                        @if (Model.ExamRuleSubtopics is not null)
                                        {
                                            foreach (var item in Model.ExamRuleSubtopics)
                                            {
                                                <tr>
                                                    <td>@item.SubjectName</td>
                                                    <td>@item.SubtopicName</td>
                                                    <td>@Html.DisplayFor(x => item.ExamType)</td>
                                                    <td>@Html.DisplayFor(x => item.QuestionType)</td>
                                                    <td>@Html.DisplayFor(x=> item.QuestionDifficultyName)</td>
                                                    <td>@item.QuestionCount</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td class="categories" colspan="5">
                                                    @SharedLocalizer["No_Data"]
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="fv-row mb-7 fv-plugins-icon-container d-flex justify-content-end mt-4">
                <a type="button" class="w3-blue w3-button w3-round fw-bold mx-2" asp-controller="ExamRule" asp-action="Index">
                    @SharedLocalizer["Back_List"]
                </a>
                <a type="button" class="w3-teal w3-button w3-round mx-2 fw-bold" asp-controller="ExamRule" asp-action="Update" asp-route-id="@Model.Id">
                    @SharedLocalizer["Update"]
                </a>
                <a class="w3-red w3-button w3-round cursor-pointer deleteAction mx-2 fw-bold" data-id="@Model.Id">
                    @SharedLocalizer["Delete"]
                </a>
            </div>
        </div>
    </div>
</div>


@section Scripts
    {
    <script src="~/lib/limonte-sweetalert2/sweetalert2.all.js"></script>
    <script>
        $(".deleteAction").click(function () {
            const id = $(this).attr("data-id");
            console.log(id);
            // id = id.replace(/[{}]/g, '');
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu işlem geri alınamaz!",
                icon: 'warning',
                showCancelButton: true,
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "GET",
                        url: "@Url.Action("Delete")" + "?id=" + id,
                        success: function (result) {
                            if (result.isSuccess) {
                                setTimeout(() => location.href = "@Url.Action("index")", 1000)
                            }
                        }
                    });
                }
            })
        });
    </script>
}
