@model AdminSubtopicCreateVm

@{
    ViewData["Title"] = ViewLocalizer["Create_Subtopic"];
}

<div class="modal fade" id="createSubtopicModal" tabindex="-1" aria-labelledby="SubtopicAdd" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ViewLocalizer["Create_New_Subtopic"]</h5>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Subtopic" asp-action="Create" class="form" id="create-subtopic">
                <div class="modal-body">
                    <div class="row mb-3">
                        <label asp-for="Name" class="col-sm-2 col-form-label col-form-label-lg"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" type="text" class="form-control form-control-lg form-control-solid" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="SubjectId" class="col-sm-2 col-form-label col-form-label-lg">@SharedLocalizer["Subtopic_Subject"]</label>
                        <div class="col-sm-10">
                            <select asp-for="SubjectId" asp-items="@ViewBag.SubjectList" id="selectSubject" class="form-select">
                                <option value="null" disabled selected>@SharedLocalizer["Choose"]</option>
                            </select>
                            <span asp-validation-for="SubjectId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" type="submit">@SharedLocalizer["Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/select2.js"></script>
