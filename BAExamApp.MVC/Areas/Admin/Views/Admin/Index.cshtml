@model IEnumerable<AdminAdminListVM>

@{
	ViewData["Title"] = ViewLocalizer["Admin_List"];
}


<section class="section dashboard">
	<div class="row">
		<div class="card recent-sales overflow-auto">
			<div class="card-body">
				<div class=" d-flex justify-content-between">
					<h5 class="card-title">@SharedLocalizer["List", SharedLocalizer["Admin"]]</h5>
					<a class="btn btn-primary my-4 col-lg-2" style="width:185px" data-bs-toggle="modal" data-bs-target="#createAdminModal">@SharedLocalizer["Create", SharedLocalizer["Admin"]]</a>
				</div>
				<table class="table table-row-bordered datatable">
					<thead>
						<tr class="text-center">
							<th class="text-center fw-bold text-white" style="background-color: rgb(134,138,155)">@Html.DisplayNameFor(model => model.Image)</th>
							<th class="text-center fw-bold text-white" style="background-color: rgb(134,138,155)">@Html.DisplayNameFor(model => model.FirstName)</th>
							<th class="text-center fw-bold text-white" style="background-color: rgb(134,138,155)">@Html.DisplayNameFor(model => model.LastName)</th>
							<th class="text-center fw-bold text-white" style="background-color: rgb(134,138,155)">@Html.DisplayNameFor(model => model.Email)</th>
							<th class="text-center fw-bold text-white" style="background-color: rgb(134,138,155)">@ViewLocalizer["Admin_Operations"]</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var admin in Model)
						{
							<tr>
								@if (admin.Image is null)
								{
									<td class="categories text-center"><img style="width: 100px;border-radius: 50%;height: 100px;" src="~/images/blank-profile-picture.png" /></td>
								}
								else
								{
									<td class="categories text-center"><img style="width: 100px;border-radius: 50%;height: 100px;" src="@(string.Format("data:image/png;base64,{0}", admin.Image))" /></td>
								}

								<td class="categories text-center">
									<a>
										<span class="post_category">@admin.FirstName</span>
									</a>
								</td>
								<td class="categories text-center">
									<a>
										<span class="post_category">@admin.LastName</span>
									</a>
								</td>
								<td class="categories text-center">
									<a>
										<span class="post_category">@admin.Email</span>
									</a>
								</td>
								<td class="employment text-center">
									<div class="dropdown">
										<button id="optionsButton1">@SharedLocalizer["Options"] <i class="fa-solid fa-chevron-down"></i></button>
										<div class="dropdown-content">
											<a asp-action="Details" asp-route-id="@admin.Id">@SharedLocalizer["Details"]</a>
											<a asp-action="Update" asp-route-id="@admin.Id">@SharedLocalizer["Edit"]</a>
										</div>
									</div>
								</td>
							</tr>

						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>


<partial name="~/Areas/Admin/Views/Admin/Create.cshtml" model="new AdminAdminCreateVM()"></partial>

	<script src="~/dataTable/~/js/main.js"></script>
<script src="~/lib/student/js/simple-datatables.js"></script>

	
	<script>
		var classroomCount = @Model.Count();
		window.onload = function () {
			paginationSetupDropdown(classroomCount);
		}
	</script>