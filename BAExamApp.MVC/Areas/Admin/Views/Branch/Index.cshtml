@model IEnumerable<AdminBranchListVM>

@{
    ViewData["Title"] = ViewLocalizer["Branches"];
    Layout = "_Layout";
}

<section class="section dashboard">
    <div class="row">
        <div class="card recent-sales overflow-auto">
            <div class="card-body ">
                <div class="d-flex justify-content-between">
                    <h5 class="card-title">@ViewLocalizer["Branch_List"]</h5>
                    <a class="btn btn-primary my-4 col-lg-2" style="width:185px" data-bs-toggle="modal" data-bs-target="#createBranchModal">@SharedLocalizer["Create", SharedLocalizer["Branch"]]</a>
                </div>
                <table class="table table-row-bordered datatable">
                    <thead>
                        <tr class="text-center">
                            <th class="text-center fw-bold text-white" style="background-color:rgb(134,138,155)">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="text-center fw-bold text-white" style="background-color: rgb(134,138,155)">@ViewLocalizer["Branch_Operations"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var branch in Model)
                        {
                            <tr>
                                <td class="categories text-center">
                                    <a>
                                        <span class="post_category">@branch.Name</span>
                                    </a>
                                </td>
                                <td class="employment text-center">
                                    <div class="dropdown">
                                        <button id="optionsButton1">@SharedLocalizer["Options"] <i class="fa-solid fa-chevron-down"></i></button>
                                        <div class="dropdown-content">
                                            <a asp-action="Details" asp-route-id="@branch.Id">@SharedLocalizer["Details"]</a>
                                            <a asp-action="Update" asp-route-id="@branch.Id">@SharedLocalizer["Update"]</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>


<partial name="~/Areas/Admin/Views/Branch/CreatePartialView.cshtml" model="new AdminBranchCreateVM()"></partial>


<script src="~/lib/student/js/simple-datatables.js"></script>

<script src="~/dataTable/~/js/main.js"></script>
<script>
    var classroomCount = @Model.Count();
    window.onload = function () {
        paginationSetupDropdown(classroomCount);
    }
</script>