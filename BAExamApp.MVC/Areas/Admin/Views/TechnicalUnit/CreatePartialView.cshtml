@model AdminTechnicalUnitCreateVM

@{
    ViewData["Title"] = ViewLocalizer["Create_New"];
}

<div class="modal fade" id="createTechnicalUnitModal" tabindex="-1" aria-labelledby="ProductAdd" aria-hidden="true">
    <div class="modal-dialog modal-l modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-title text-center fw-bolder" style="font-size:30px">@ViewLocalizer["Create_New"]</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="form fv-plugins-bootstrap5 fv-plugins-framework" id="create-tehnical-unit" asp-action="Create">
                    <div class="fv-row mb-7 fv-plugins-icon-container">
                        <label class="form-label mt-3" style="font-size: 20px; font-weight: bold;">
                            <label asp-for="Name"></label>
                        </label>
                        <input type="text" class="form-control form-control-solid" asp-for="Name" />
                        <div class="fv-plugins-message-container invalid-feedback"><span asp-validation-for="Name"></span></div>
                    </div>
                    <div class="separator mb-6"></div>
                    <div class="d-flex justify-content-end">
                        <button class="w3-green w3-button w3-round fw-bold mx-2" type="submit">@SharedLocalizer["Save"]</button>
                        <br />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
